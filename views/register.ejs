<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1631089667980-7fe55b2abb9a?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YWJzcmF0JTIwJTIwYmFja2dyb3VuJTIweWVsbG93JTIwY29sb3VyfGVufDB8fDB8fHww')] flex items-center justify-center"
>
  <div class="w-[27vw] bg-white px-16 py-10 rounded-[30px]">
    <h1
      class="text-3xl leading-none tracking-tighter capitalize mb-10 text-center font-semibold text-zinc-700"
    >
      Create new account
    </h1>
    <form action="/register" method="post">
      <input
        class="block w-full mt-2 px-3 py-2 border-2 rounded-md"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block w-full mt-2 px-3 py-2 border-2 rounded-md"
        type="email"
        name="email"
        placeholder="email"
      />

      <input
        class="block w-full mt-2 px-3 py-2 border-2 rounded-md"
        type="number"
        name="contact"
        placeholder="contact"
      />
      <input
        class="block w-full mt-2 px-3 py-2 border-2 rounded-md"
        type="text"
        name="password"
        placeholder="password"
      />

      <input
        class="block w-full px-3 py-2 bg-red-600 border-2 rounded-md mt-5 text-white rounded-full"
        type="submit"
        value="Create New Account"
      />

      <p class="text-xs font-semibold text-zinc-700 mt-7 w-23 mx-auto">
        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Aspernatur
        magnam cupiditate
      </p>
    </form>
    <a
      class="inline-block mt-7 font-semibold text-cener text-zinc-700 w-full"
      href="/"
      >Login Existing account?</a
    >
  </div>
</div>

