<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1524721696987-b9527df9e512?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTl8fGFidHJhY3R8ZW58MHx8MHx8fDA%3D')] flex items-center justify-center"
>
  <div class="w-[27vw] bg-white px-16 py-10 rounded-[30px]">
    <h1
      class="text-3xl leading-none tracking-tighter capitalize text-center font-semibold text-zinc-700"
    >
      Welcome to Pinterest
    </h1>
    <form action="/login" method="post">
      <input
        class="block w-full mt-2 px-3 py-2 border-2 rounded-md"
        type="text"
        name="username"
        placeholder="username"
      />
      <input
        class="block w-full mt-2 px-3 py-2 border-2 rounded-md"
        type="text"
        name="password"
        placeholder="password"
      />

      <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">
        Forgot Password</a
      >

      <input
        class="block w-full px-3 py-2 bg-red-600 border-2 rounded-md text-white rounded-full mt-2"
        type="submit"
        value="Login"
        placeholder="password"
      />

      <p class="text-xs font-semibold text-zinc-700 mt-7 w-23 mx-auto">
        Lorem ipsum dolor sit amet consectetur, adipisicing elit. Aspernatur
        magnam cupiditate neque, saepe itaque laudantium!
      </p>
    </form>
    <a
      class="inline-block mt-7 font-semibold text-center text-zinc-700 w-full"
      href="/register"
      >Don't Have an account?</a
    >
  </div>
