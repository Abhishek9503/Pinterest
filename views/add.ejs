<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl">Create a new Post</h1>
  <hr class="mt-3 opacity-10" />

  <form
    action="/createpost"
    method="post"
    enctype="multipart/form-data"
    class="text-black"
  >
    <input
      class="block w-1/3 px-3 py-2 border-2 mt-2"
      type="file"
      name="postimage"
    />
    <input
      name="title"
      class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2"
      type="text"
      placeholder="Title"
    />
    <textarea
      class="w-1/3 h-60 px-3 py-2 border-2 mt-2"
      type="text"
      placeholder="Descirption"
      name="description"
    ></textarea>

    <input
      class="block rounded-md w-1/3 px-3 py-2 mt-2 bg-red-700"
      type="submit"
      value="Create Post"
    />
  </form>
</div>

